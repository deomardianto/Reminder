<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".impian.AddImpianActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="5dp"
        style="@style/MarginFormEdittext">
    <EditText
        android:id="@+id/nama_impian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/nama_impian"
        android:inputType="text"
        android:padding="8dp"
        android:layout_margin="10dp"
        android:cursorVisible="true"
        android:textSize="17sp"
        android:fontFamily="@font/poppins_regular"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="5dp"
        style="@style/MarginFormEdittext">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/target_pencapaian"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:textColor="#000000"
        android:textSize="17sp"
        android:fontFamily="@font/poppins_medium"/>

    <Spinner
        android:id="@+id/spin_target"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:entries="@array/kat_artikel"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="5dp"
        style="@style/MarginFormEdittext">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
    <TextView
        android:id="@+id/txhabits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/kebiasaan_impian"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:textColor="#000000"
        android:textSize="17sp"
        android:fontFamily="@font/poppins_medium"/>

            <LinearLayout
                android:id="@+id/layout_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txhabits"
                android:layout_margin="10dp"
                android:orientation="vertical"/>

            <TextView
                android:id="@+id/btnTambahList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tambah"
                android:textSize="17sp"
                android:background="@drawable/rectangle_cardview"
                android:textColor="#FFFFFF"
                android:padding="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/poppins_medium"
                android:drawableStart="@drawable/ic_add_black_24dp"
                android:layout_below="@id/layout_list"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/btnsimpan_agenda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/MarginFormEdittext"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="15dp"
        app:cardElevation="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/simpan"
            android:padding="8dp"
            android:layout_gravity="center_horizontal"
            android:textSize="17sp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/poppins_medium"/>
    </androidx.cardview.widget.CardView>

</LinearLayout>