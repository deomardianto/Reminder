<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00CCB0"
    tools:context=".verify.LoginActivity">

    <ImageView
        android:id="@+id/logo_app"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="120dp"
        android:src="@drawable/logo_app"
        android:layout_alignParentTop="true"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:background="@drawable/rectangle"
        android:layout_alignParentBottom="true"/>

    <TextView
        android:id="@+id/txbuatakun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login"
        android:layout_centerHorizontal="true"
        android:textColor="#00CCB0"
        android:fontFamily="@font/poppins_semibold"
        android:layout_marginTop="20dp"
        android:layout_above="@id/maillogin"
        android:textSize="22sp"/>

    <EditText
        android:id="@+id/maillogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/username_atau_email"
        android:background="@drawable/rectangle_edittext"
        android:padding="10dp"
        android:cursorVisible="true"
        android:inputType="textEmailAddress"
        android:fontFamily="@font/poppins_regular"
        android:layout_margin="12dp"
        android:layout_above="@id/pwlogin"/>
    <com.subhrajyoti.passwordview.PasswordView
        android:id="@+id/pwlogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/password"
        android:background="@drawable/rectangle_edittext"
        android:padding="10dp"
        android:cursorVisible="true"
        app:eyeTint="@color/colorPrimary"
        android:inputType="textPassword"
        android:fontFamily="@font/poppins_regular"
        android:layout_margin="12dp"
        android:layout_above="@id/txforgot"/>
    <TextView
        android:id="@+id/txforgot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lupa_password"
        android:layout_above="@id/btnlogin"
        android:fontFamily="@font/poppins_medium"
        android:layout_margin="12dp"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnlogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_forward_black_24dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        app:fabSize="normal"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="20dp"/>
    <TextView
        android:id="@+id/btnsignin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buat_akun_baru"
        android:layout_below="@id/txforgot"
        android:layout_marginStart="12dp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="#000000"
        android:textSize="18sp"/>
</RelativeLayout>